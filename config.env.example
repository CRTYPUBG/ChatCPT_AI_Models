# ChatCPT 3.0 Konfigürasyon Örneği
# Bu dosyayı 'config.env' olarak kopyalayın ve kendi değerlerinizi girin

# Google API Ayarları (Opsiyonel - Arama özelliği için)
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id_here

# Model Ayarları
MODEL_NAME=ChatCPT-3.0
MODEL_VERSION=3.0
LANGUAGE=Turkish
MODEL_PATH=./models/ChatCPT-3.0

# Sistem Ayarları
AUTO_SAVE=true
DEBUG_MODE=false
MAX_CONTEXT_MEMORY=10
CONFIDENCE_THRESHOLD=0.3
LEARNING_RATE=0.01

# Arama Ayarları
DEFAULT_SEARCH_RESULTS=3
MAX_SEARCH_RESULTS=10
SEARCH_TIMEOUT=30

# Güvenlik Ayarları
ENABLE_LEARNING=true
SAVE_CHAT_HISTORY=false
MAX_RESPONSE_LENGTH=1000

# Performans Ayarları
MAX_VOCABULARY_SIZE=5000
EMBEDDING_DIMENSION=100
RESPONSE_CACHE_SIZE=100

# Dil Ayarları
PRIMARY_LANGUAGE=tr
FALLBACK_LANGUAGE=en
ENABLE_MULTILINGUAL=false

# Özellik Anahtarları
ENABLE_GOOGLE_SEARCH=true
ENABLE_CONTEXT_MEMORY=true
ENABLE_FINE_TUNING=true
ENABLE_PATTERN_MATCHING=true

# Gelişmiş Ayarlar
TOKENIZER_TYPE=simple
SIMILARITY_ALGORITHM=jaccard
PATTERN_EXTRACTION_METHOD=keyword
RESPONSE_SELECTION_METHOD=confidence